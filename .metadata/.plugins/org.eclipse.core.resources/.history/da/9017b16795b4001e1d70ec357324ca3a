#include "main.h" // kolejnosc ma znaczenie
#include "button.h"

// Button init
void ButtonInitKey(TButton *Key, GPIO_TypeDef *GpioPort, uint16_t GpioPin,
		uint32_t TimerDeboune) {
	Key->state = IDLE;
	Key->GpioPort = GpioPort;
	Key->GpioPin = GpioPin;
	Key->TimerDeboune = TimerDeboune;
}
